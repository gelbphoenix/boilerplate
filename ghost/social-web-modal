<script>
document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('gh-portal-activitypub-modal-overlay');
    const closeBtn = document.getElementById('gh-portal-close');
    const copyBtn = document.getElementById('gh-portal-activitypub-copy-btn');
    const handleInput = document.getElementById('gh-portal-activitypub-handle');
    const msg = document.getElementById('gh-portal-activitypub-msg');

    const closeModal = () => {
        modal.style.display = 'none';
        if (window.history.replaceState) {
             window.history.replaceState(null, null, window.location.pathname);
        }
    };

    const navLinks = document.querySelectorAll('a[href="#/activitypub"]');
    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            modal.style.display = 'flex';
        });
    });

    closeBtn.addEventListener('click', closeModal);

    modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
    });

    document.addEventListener('keydown', (e) => {
        if (e.key === "Escape" && modal.style.display === 'flex') {
            closeModal();
        }
    });

    copyBtn.addEventListener('click', () => {
        handleInput.select();
        handleInput.setSelectionRange(0, 99999);
        navigator.clipboard.writeText(handleInput.value).then(() => {
            msg.style.opacity = '1';
            setTimeout(() => msg.style.opacity = '0', 2500);
        });
    });
});
</script>